{% extends 'base.html.twig' %}

{% block title %}movie Guestbook{% endblock %}

{% block body %}
    <h2 class="mb-5">
        Give your feedback!
    </h2>

    {% for row in movies|batch(4) %}
        <div class="row">
            {% for movie in row %}
                <div class="col-12 col-md-6 col-lg-3 mb-4">
                    <div class="card border shadow lift">
                        <div class="card-body">
                            <div class="card-title">
                                <h4 class="font-weight-light">
                                    {{ movie }}
                                </h4>
                            </div>

                            <a href="{{ path('movie', { id: movie.id, slug: movie.slug }) }}"
                               class="btn btn-sm btn-primary stretched-link">
                                View
                            </a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endfor %}
{% endblock %}
